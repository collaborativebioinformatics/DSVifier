  author = {Ghosh, Pallab and Halvorsen, Elizabeth M. and Ammendolia, Dustin A. and {Mor-Vaknin}, Nirit and O'Riordan, Mary X. D. and Brumell, John H. and Markovitz, David M. and Higgins, Darren E.},
