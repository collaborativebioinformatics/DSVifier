  author = {Z{\'e}br{\'e}, Arthur Constant and Ak{\'e}, Francine Moussan and Ventroux, Magali and {Koffi-Nevry}, Rose and {Noirot-Gros}, Marie-Fran{\c c}oise and Deutscher, Josef and Milohanic, Eliane},
