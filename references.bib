@article{koGenomewideVitroBacterialInfection2009,
  title = {A {{Genome}}-Wide {{In Vitro Bacterial}}-{{Infection Screen Reveals Human Variation}} in the {{Host Response Associated}} with {{Inflammatory Disease}}},
