  shorttitle = {Novel Bacteriocyte-Associated Pleomorphic Symbiont of the Grain Pest Beetle {{Rhyzopertha}} Dominica ({{Coleoptera}}},
  author = {Okude, Genta and Koga, Ryuichi and Hayashi, Toshinari and Nishide, Yudai and Meng, Xian-Ying and Nikoh, Naruo and Miyanoshita, Akihiro and Fukatsu, Takema},
