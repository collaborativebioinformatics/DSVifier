  doi = {10.1016/S1068-607X(99)00039-6},
  abstract = {Listeria monocytogenes is an intracellular ubiquitous organism that affects patients with decreased cell mediated immunity. Listeria causes the most severe disease in patients who have HIV infection, cancer, diabetes mellitus, renal failure, alcoholism and who are pregnant. Listeria monocytogenes is a short, gram-positive rod that can occur singly or in short chains. The organism grows well at refrigerator temperatures (5\textendash 10 C) and is a known food-borne pathogen. Listeria monocytogenes has been known as a veterinary disease that causes a basilar meningitis (circling disease) in herd animals. The bacterium has been found in 5\textendash 15\% of normal stool samples. Listeria has also been recovered from a variety of foods including soft cheeses, raw milk, and processed meats. There are close to 2,000 cases of listeriosis which account for approximately 425 deaths each year. The infection usually occurs after ingestion of infected food products. The incubation period is between two and six weeks. Iron supplementation has been found to promote disease and gastric acid has shown protective effects. The clinical manifestations include sepsis, meningitis, rhomboencephalitis, brain abscess, endocarditis, acute gastrointestinal illness and a variety of focal infections. There are also many unique complications of pregnancy including preterm labor, chorioamnionitis, spontaneous abortion, and stillbirth. Listeria crosses the placenta and causes early and late onset disease in the neonate, with the most severe manifestation being granulomatosis infantiseptica. Listeria does not cause habitual abortion in humans. Infection is diagnosed by culture from sterile body fluids such as blood, cerebrospinal fluid and amniotic fluid. The treatment of choice is ampicillin. The patient also should be treated with gentamicin if she has meningitis, endocarditis, or is severly immunocompromised. Early treatment decreases mortality and residual morbidity so it is imperative that each clinician maintain a high index of suspicion for this unusual infection.},
  file = {/Users/virginie/Zotero/storage/5IVCSKMM/DiMaio - 2000 - Listeria infection in women.pdf;/Users/virginie/Zotero/storage/6UYIKYLC/S1068607X99000396.html},
  journal = {Primary Care Update for OB/GYNS},
  number = {1}
}

@article{dingmanMediumPromotingSporulation1983,
  title = {Medium {{Promoting Sporulation}} of {{Bacillus}} Larvae and {{Metabolism}} of {{Medium Components}}},
